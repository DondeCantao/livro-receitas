@model livro_receitas.Models.Receitas;

@{
    ViewData["Title"] = "Editar a receita";
}
<h1>Edite a receita</h1>

<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div class="form-group">
                <label asp-for="Nome" class="Control-label"></label>
                <input asp-for="Nome" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="Control-label"></label>
                <br>
                <select name = "Tipo">
                    <option value="Doce">Doce</option>
                    <option value="Salgado">Salgado</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Descrição" class="Control-label"></label>
                <input asp-for="Descrição" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Igredientes" class="Control-label"></label>
                <input asp-for="Igredientes" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="ModoDePreparo" class="Control-label"></label>
                <input asp-for="ModoDePreparo" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="LinkYoutube" class="Control-label"></label>
                <input asp-for="LinkYoutube" class="form-control">
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>
</hr>
<div>
    <a asp-action="Index">Voltar</a>
</div>